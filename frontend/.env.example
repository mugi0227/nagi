# Authentication Mode: local, oidc, env
VITE_AUTH_MODE=local

# API Base URL (optional, defaults to /api for nginx proxy compatibility)
VITE_API_URL=http://localhost:8000/api

# OIDC Configuration (required if VITE_AUTH_MODE=oidc)
VITE_OIDC_DOMAIN=
VITE_OIDC_AUTH_URL=
VITE_OIDC_TOKEN_URL=
VITE_OIDC_CLIENT_ID=
VITE_OIDC_REDIRECT_URI=
VITE_OIDC_SCOPES=openid profile email

# Development Options
VITE_ALLOW_DEV_LOGIN=false
VITE_ALLOW_TOKEN_LOGIN=false

# Production Preview Server Configuration
# Comma-separated list of allowed hostnames (e.g., "magi.ai.pm-ppes.com,localhost")
VITE_ALLOWED_HOSTS=localhost
