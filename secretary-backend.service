[Unit]
Description=nagi Backend (FastAPI)
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/Secretary_Partner_AI/backend
Environment="PATH=/home/ec2-user/Secretary_Partner_AI/backend/.venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONPATH=/home/ec2-user/Secretary_Partner_AI/backend"
ExecStart=/home/ec2-user/Secretary_Partner_AI/backend/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
